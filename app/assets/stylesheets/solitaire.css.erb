body {
  background: url('body_bg.png');
}

/* Header */
#header {
  height: 222px;
  overflow: visible;
}

#move-card-button{
  visibility: hidden;
}

#next-card-button{
  visibility: hidden;
}

/* Train */

#train-container {
  width: 29%;
  height: 100%;
  margin-left: 1%;
  float: left;
}

#train-deck {
  width: 40%;
  max-width: 156px;
  height: 100%;
  overflow: hidden;
  float: left;
}

#next-card-trigger {
  width: 99%;
  border: 1px solid black;
  border-radius: 9px;
}


.train {
  height: 100%;
  width: 40%;
  max-width: 156px;
  margin-left: 20px !important;
  float: left !important;
}

.train .card{
  margin-bottom: -219px !important;
}

#train-deck form{
  height: 100%;
}

#rewarded_chips{
  position: absolute;
  left: 30%;
  top: 10px;
}

#rewarded_chips table{
  border-collapse: collapse;
  border: 1px solid gray;
}

#rewarded_chips .title_table_score{
  color: white;
  background: #01a4ba;
  font-weight: bold;
  font-family: 'Helvetica',arial;
  width: 60px;
  padding: 6px 2px 6px 2px;
  height: 25px;
}

#rewarded_chips tr{
  border: 1px solid gray;
}

#rewarded_chips td {
     font-size: 12px;
    font-family: 'Helvetica',arial;
    text-align: center;
    width: 80px;
    background: white;
}

/* Feeder Line */
.feed-line-column {
  height: 800px;
  width: 12%;
  float: left;
  margin: 0 1%;
  text-align: center;
}

#feed-line-container {
  margin: 0 30px;
  overflow: visible;
  text-align: center;
}

.card {
  margin: 0 auto;
  width: 99%;
  height: 219px;
  margin-bottom: -209px;
  max-width: 156px;
}

.card img {
  border: 1px solid black;
  border-radius: 9px;
  width: 100%;
  background-color: white;
}

/* Product Line */
.product-line-column {
  width: 21%;
  height: 100%;
  padding: 0 3px;
  overflow: visible;
  float: left;
  text-align: center;
}

.product-line-column .card{
  margin-bottom: -219px !important;
}

#product-line-container {
  height: 100%;
  width: 56%;
  float: right;
  overflow: visible;
  text-align: center;
}

.empty-column img{
  width: 103%;
  max-width: 156px;
}

/* Drag */

.dragging-group {
  width: 11%;
}

.dragging-group .card {
  width: 102%;
}