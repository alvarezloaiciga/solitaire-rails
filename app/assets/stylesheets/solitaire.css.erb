/* Header */
#header {
  height: 222px;
  overflow: visible;
}

#move-card-button{
  visibility: hidden;
}

#next-card-button{
  visibility: hidden;
}

/* Train */

#train-container {
  width: 29%;
  height: 100%;
  margin-left: 1%;
  float: left;
}

#train-deck {
  width: 40%;
  max-width: 145px;
  height: 100%;
  overflow: hidden;
  float: left;
}

#next-card-trigger {
  width: 99%;
  border: 1px solid black;
  border-radius: 9px;
}


.train {
  height: 86%;
  width: 40%;
  max-width: 145px;
  margin-left: 20px !important;
  float: left !important;
}

.train .card{
  margin-bottom: -190px !important;
}

#train-deck form{
  height: 100%;
}

/* Feeder Line */
.feed-line-column {
  height: 800px;
  width: 12%;
  float: left;
  margin: 0 1%;
  text-align: center;
}

#feed-line-container {
  margin: 0 30px;
  overflow: visible;
  text-align: center;
}

.card {
  margin: 0 auto;
  width: 99%;
  height: 190px;
  margin-bottom: -170px;
  max-width: 140px;
}

.card img {
  border: 1px solid black;
  border-radius: 9px;
  width: 100%;
  height: 190px;
  max-width: 140px;
  background-color: white;
}

/* Product Line */
.product-line-column {
  width: 20%;
  height: 99%;
  padding: 0 3px;
  overflow: visible;
  float: left;
  text-align: center;
}

.product-line-column .card{
  margin-bottom: -190px !important;
}

#product-line-container {
  height: 100%;
  width: 56%;
  float: right;
  overflow: visible;
  text-align: center;
}

.empty-column img{
  width: 90%;
  height: 190px;
  max-width: 145px;
}

/* Drag */

.dragging-group {
  width: 11%;
}

.dragging-group .card {
  width: 102%;
}