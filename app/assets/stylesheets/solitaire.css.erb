/* Header */
#header {
  overflow: hidden;
}

#move-card-button{
  visibility: hidden;
}

/* Train */

#train-container {
  height: 220px;
  margin: 0 30px;
  float: left;
}

#train-deck {
  width: 156px;
  height: 220px;
  overflow: hidden;
  float: left;
}

#train {
  margin-left: 20px !important;
  width: 120px !important;
  float: left !important;
}

#train-deck form{
  height: 100%;
}

#next-card-form-button {
  height: 100%;
  width: 100%;
  border: none;
  background-color: white;
  background-image: url(<%= asset_path 'deck/back.png' %>);
  border: 1px solid black;
  border-radius: 9px;
}

/* Feeder Line */
.feed-line-column {
  height: 800px;
  width: 12%;
  float: left;
  margin: 0 1%;
  text-align: center;
}

#feed-line-container {
  margin: 0 30px;
  overflow: hidden;
  text-align: center;
}

.product-line-card {
  margin-bottom: -219px !important;
}

.card {
  margin: 0 auto;
  width: 153px;
  height: 219px;
  margin-bottom: -170px;
}

.card img {
  border: 1px solid black;
  border-radius: 9px;
  width: 100%;
  background-color: white;
}

.card-hidden {
}

/* Product Line */
.product-line-column {
  width: 160px;
  height: 100%;
  float: left;
  text-align: center;
}

#product-line-container {
  height: 221px;
  width: 700px;
  margin: 0 30px;
  float: right;
  overflow: hidden;
  text-align: center;
}

.empty-column {
  height: 219px;
  border: 1px dashed gray;
}
