body {
  background: url('body_bg.png');
}

/* Header */
#header {
  height: 222px;
  overflow: visible;
}

#move-card-button{
  visibility: hidden;
}

#next-card-button{
  visibility: hidden;
}

/* Train */

#train-container {
  width: 29%;
  height: 100%;
  margin-left: 1%;
  float: left;
}

#train-deck {
  width: 40%;
  max-width: 156px;
  height: 100%;
  overflow: hidden;
  float: left;
}

#next-card-trigger {
  width: 99%;
  border-radius: 9px;
}

.train {
  height: 100%;
  width: 40%;
  max-width: 156px;
  margin-left: 20px !important;
  float: left !important;
}

.train .card{
  margin-bottom: -219px !important;
}

#train-deck form{
  height: 100%;
}

#rewarded_chips{
  position: absolute;
  left: 30%;
  top: 10px;
  z-index: -20;
}

#rewarded_chips table{
  border-collapse: collapse;
  border: 1px solid gray;
}

#rewarded_chips .title_table_score{
  color: white;
  background: #01a4ba;
  font-weight: bold;
  font-family: 'Helvetica',arial;
  width: 60px;
  padding: 6px 2px 6px 2px;
  height: 25px;
}

#rewarded_chips tr{
  border: 1px solid gray;
}

#rewarded_chips td {
     font-size: 12px;
    font-family: 'Helvetica',arial;
    text-align: center;
    width: 80px;
    background: white;
}

/* Feeder Line */
.feed-line-column {
  height: 800px;
  width: 12%;
  float: left;
  margin: 0 1%;
  text-align: center;
}

#feed-line-container {
  margin: 0 30px;
  overflow: visible;
  text-align: center;
}

.card {
  margin: 0 auto;
  width: 99%;
  height: 219px;
  margin-bottom: -209px;
  max-width: 156px;
}

.card img {
  border: 1px solid black;
  border-radius: 9px;
  width: 100%;
  background-color: white;
}

/* Product Line */
.product-line-column {
  width: 21%;
  height: 100%;
  padding: 0 3px;
  overflow: visible;
  float: left;
  text-align: center;
}

.product-line-column .card{
  margin-bottom: -219px !important;
}

#product-line-container {
  height: 100%;
  width: 56%;
  float: right;
  overflow: visible;
  text-align: center;
}

.empty-column img{
  width: 103%;
  max-width: 156px;
}

/* Drag */

.dragging-group {
  width: 11%;
}

.dragging-group .card {
  width: 102%;
}

/* modal box */
.ui-widget {
    font-size: .8em;
}

.ui-widget-content {
  background: white;
  border: 1px solid gray;
}

.ui-dialog {
  padding: 0 !important;
  position: absolute;
}

.ui-dialog .ui-dialog-content {
  background: none repeat scroll 0 0 transparent;
  border: 0 none;
  overflow: auto;
  position: relative;
  padding: 0 !important;
  overflow: hidden;
}

.ui-widget-header {
  width: 100%;
  background-color: #6ea92a;
}

.ui-button{
  position: relative;
  left: 86%;
}

#pop_up{
  position: relative;
  margin: -10px 20px 20px 20px;
  top: 10px;
  min-width: 260px;
}

#pop_up .table{
  border-collapse: collapse;
  min-width: 250px; 
}

#pop_up .pop_up_table{
  color: black;
  font-weight: bold;
  width: 50%;
  padding: 6px 2px 6px 2px;
  height: 25px;
}

#pop_up td {
  font-weight: bold;
  font-size: 12px;
  font-family: 'Helvetica',arial;
  text-align: center;
  background: white;
}

p.title {
  text-align: center;
  font-weight: bold;
  text-decoration:underline;
}

.ui-widget-overlay{
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color:#000;
  opacity:0.6;
    -webkit-border-radius:6px;
}

.ui-corner-all,
.ui-corner-top,
.ui-corner-left,
.ui-corner-tl {
  border-top-left-radius: 4px;
}
.ui-corner-all,
.ui-corner-top,
.ui-corner-right,
.ui-corner-tr {
  border-top-right-radius: 4px;
}
.ui-corner-all,
.ui-corner-bottom,
.ui-corner-left,
.ui-corner-bl {
  border-bottom-left-radius: 4px;
}
.ui-corner-all,
.ui-corner-bottom,
.ui-corner-right,
.ui-corner-br {
  border-bottom-right-radius: 4px;
}

#hidden_button {
  display: none;
  position: relative;
  left: 7%;
  top: 25%;
}

#hidden_button .button_to {
  margin-bottom: 2em;
}