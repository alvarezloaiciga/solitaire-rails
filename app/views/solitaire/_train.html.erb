<div id="train-container">
  <div id="train-deck">
    <%= form_for @game, url: next_card_path, method: :post, remote: true do |f| %>
      <%= image_tag "deck/back.png", id: "next-card-trigger" %>
      <%= f.submit "", id: "next-card-button" %>
    <% end %>
  </div>

  <%= div_for @game.cards_train, class: "train" do %>
    <% cards = @game.cards_train.used_cards %>
    <% if cards.present? %>
      <% cards.each do |card| %>
        <%= render partial: 'card', locals: { card: card } %>
      <% end %>
    <% end %>
  <% end %>
</div>
