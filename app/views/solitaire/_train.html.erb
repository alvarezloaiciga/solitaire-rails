<div id="train-container">
  <div id="train-deck">
    <%= form_for(@game, url: next_card_path, method: :post, remote: true, authenticity_token: true) do |f| %>
      <%= image_tag "deck/back.png", id: "next-card-trigger" %>
      <%= f.submit "", id: "next-card-button" %>
    <% end %>
  </div>

  <%= div_for @game.cards_train, class: "train" do %>
    <% cards = @game.cards_train.used_cards %>
    <% if cards.present? %>
      <% cards.each do |card| %>
        <%= render partial: 'card', locals: { card: card } %>
      <% end %>
    <% end %>
  <% end %>

  <div id = "rewarded_chips">
      <table id = "chips_awarded">
        <tbody>
          <tr>
            <td class= "title_table_score">Total Chips</td>
            <td>1080 chips</td>
          </tr>
          <tr>
            <td class= "title_table_score">Bet</td>
            <td><span id="bet"></span> chips</td>
          </tr>
          <tr>
            <td class= "title_table_score" style="background-color: #6ea92a;">Bonus</td>
            <td><span id="aces"></span> chips</td>
          </tr>
        </tbody>
      </table>
  </div>
</div>
<span style="position: absolute; top: 130px;"><%= button_to "New game", { action: "new" }, method: :get %></span>