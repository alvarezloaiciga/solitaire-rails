cards_selected = $(".card-selected");
cards_selected.removeClass("card-selected");

train = $("#<%= object_id(@train) %>");
<% active_card = @train.active_card %>
if(<%= active_card.present?  %>){
  $("<%= escape_javascript(render partial: 'card', locals: { card: active_card }) %>").appendTo(train);
} else {
  train.empty();
}

$('.move-card-form :input').not(':checkbox, :submit').removeAttr('value');
