<% if column.ordered_cards.present? %>
  <%= div_for column, class: "product-line-column" do %>
    <% column.ordered_cards.each do |card| %>
      <%= render partial: 'card', locals: { card: card, klass: "product-line-card" } %>
    <% end %>
  <% end %>
<% else %>
  <%= div_for column, class: "product-line-column empty-column" do %>
    <%= image_tag("deck/empty.png") %>
  <% end %>
<% end %>
